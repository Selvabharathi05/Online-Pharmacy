@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "List of Suppliers";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.SupplierId)</th>
                    <th>@Html.DisplayNameFor(model=>model.SupplierName)</th>
                    <th>@Html.DisplayNameFor(model=>model.SupplierAddress)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                       
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SupplierId)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SupplierName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SupplierAddress)
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.SupplierId"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.SupplierId"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.SupplierId"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        }
                    </tr>

                }
            </tbody>
        </table>
        @await Html.PartialAsync("_CreateItem", "Supplier")

    </div>
   

</div>

